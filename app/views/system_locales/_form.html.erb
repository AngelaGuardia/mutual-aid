<%= simple_form_for @system_locale do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :locale %>
    <%= f.input :locale_name %>
    <%= f.input :publish_in_dropdowns, as: :radio_buttons %>
    <%= f.input :publish_translations, as: :radio_buttons %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, record: @system_locale, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
