<%= render "layouts/view_header", resource: @system_locales.first || "system_locale".classify.constantize.new %>

<table class="table table-hover table-curved table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Publish in dropdowns?</th>
      <th>Publish translations?</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @system_locales.each do |system_locale| %>
      <tr>
        <td><%= system_locale.locale_name %></td>
        <td><%= system_locale.locale %></td>
        <td><%= yes_no(system_locale.publish_in_dropdowns) %></td>
        <td><%= yes_no(system_locale.publish_translations) %></td>
        <td><%= edit_button(system_locale) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
