<%= render "layouts/view_header", resource: @external_resource %>

<div class="section-detail">
  <p>
  <strong>Name:</strong>
  <%= @external_resource.name %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= @external_resource.tags %>
  </p>

  <p>
    <strong>Website url:</strong>
    <%= @external_resource.website_url %>
  </p>

  <p>
    <strong>Facebook url:</strong>
    <%= @external_resource.facebook_url %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @external_resource.phone %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @external_resource.description %>
  </p>

  <p>
    <strong>Displaying on website:</strong>
    <%= @external_resource.published? %>
  </p>

  <p>
    <strong>Youtube identifier:</strong>
    <%= @external_resource.youtube_identifier %>
  </p>

  <p>
    <strong>System Location:</strong>
    <%= @external_resource.system_location&.name %>
  </p>

  <p>
    <strong>Approved:</strong>
    <%= @external_resource.approved %>
  </p>

  <%= link_to 'Back', external_resources_path %>
</div>
