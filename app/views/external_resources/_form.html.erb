<%= simple_form_for(external_resource) do |form| %>
  <% if external_resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(external_resource.errors.count, "error") %> prohibited this external_resource from being saved:</h2>

      <ul>
        <% external_resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="form-group">
      <%= form.input :name %>
      <%= form.input :display_on_website %>
    </div>

    <div class="form-group">
      <%= form.input :tags %>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <%= form.input :website_url %>
    </div>

    <div class="form-group">
      <%= form.input :facebook_url %>
    </div>

    <div class="form-group">
      <%= form.input :youtube_identifier %>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <%= form.input :phone %>
    </div>

    <div class="form-group">
      <%= form.input :location_id %>
    </div>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <%= form.input :description %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit %>
  </div>
<% end %>
