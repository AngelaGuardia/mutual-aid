<div class="columns is-marginless">
  <div class="column is-9">
    <h1 class="title">Donations</h1>
    <br>
  </div>
  <div class="column is-2">
    <%= render "layouts/add_new_button", table_name: "donations" %>
  </div>
</div>

<table class="table table-hover table-curved table-condensed">
  <thead>
  <tr>
          <th>Person</th>
          <th>Value</th>
          <th>Channel</th>
          <th>Thank you sent</th>
          <th>Notes</th>
        <th>Edit</th>
  </tr>
  </thead>

  <tbody>
  <% @donations.each do |donation| %>
    <tr>
              <td><%= donation.person_id %></td>
              <td><%= donation.value %></td>
              <td><%= donation.channel %></td>
              <td><%= donation.thank_you_sent %></td>
              <td><%= donation.notes %></td>
            <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
