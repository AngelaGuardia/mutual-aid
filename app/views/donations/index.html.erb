<%= render "layouts/view_header", resource: @donations.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
      <tr>
        <th>Person</th>
        <th>Value</th>
        <th>Channel</th>
        <th>Thank you sent</th>
        <th>Notes</th>
        <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      <% @donations.each do |donation| %>
        <tr>
          <td><%= donation.person&.name %></td>
          <td class="has-text-right"><%= number_to_currency(donation.value) %></td>
          <td><%= donation.channel %></td>
          <td class="has-text-centered"><%= yes_no(donation.thank_you_sent) %></td>
          <td><%= donation.notes %></td>
          <td><%= edit_button(donation) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
