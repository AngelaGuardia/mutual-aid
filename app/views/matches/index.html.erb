<div class="columns is-marginless">
  <div class="column is-9">
    <h1 class="title">Matches</h1>
    <br>
  </div>
  <div class="column is-2">
    <%= render "layouts/add_new_button", table_name: "matches" %>
  </div>
</div>

<table class="table table-hover table-curved table-condensed">
  <thead>
  <tr>
          <th>Owner</th>
          <th>Asker</th>
          <th>Status</th>
          <th>Notes</th>
          <th>Tentative</th>
          <th>Completed</th>
        <th>Edit</th>
  </tr>
  </thead>

  <tbody>
  <% @matches.each do |match| %>
    <tr>
              <td><%= match.owner %></td>
              <td><%= match.asker %></td>
              <td><%= match.status %></td>
              <td><%= match.notes %></td>
              <td><%= match.tentative %></td>
              <td><%= match.completed %></td>
            <td><%= link_to 'Edit', edit_match_path(match) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
