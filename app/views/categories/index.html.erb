<%= render "layouts/view_header", resource: @categories.first %>

<div class="index">
  <div class="columns is-marginless">
    <div class="column">
      <table class="table table-hover table-curved table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Parent</th>
          <th>Is created by admin</th>
          <th>Display to public</th>
          <th>Display order</th>
          <th>Edit</th>
        </tr>
        </thead>

        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td><%= category.parent&.name %></td>
            <td><%= yes_no(category.is_created_by_admin) %></td>
            <td><%= yes_no(category.display_to_public) %></td>
            <td><%= category.display_order %></td>
            <td><%= edit_button(category) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>