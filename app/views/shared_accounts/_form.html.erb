<%= simple_form_for @shared_account, wrapper: :default, defaults: { wrapper: false } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :account_url %>
    <%= f.input :username %>
    <%= f.input :password_hint %>
    <%= f.input :notes %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, resource: @shared_account, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
