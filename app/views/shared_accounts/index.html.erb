<div class="columns is-marginless">
  <div class="column is-9">
    <h1 class="title">Shared Accounts</h1>
    <br>
  </div>
  <div class="column is-2">
    <%= render "layouts/add_new_button", table_name: "shared_accounts" %>
  </div>
</div>

<table class="table table-hover table-curved table-condensed">
  <thead>
  <tr>
          <th>Name</th>
          <th>Account url</th>
          <th>Username</th>
          <th>Password hint</th>
          <th>Notes</th>
        <th>Edit</th>
  </tr>
  </thead>

  <tbody>
  <% @shared_accounts.each do |shared_account| %>
    <tr>
              <td><%= shared_account.name %></td>
              <td><%= shared_account.account_url %></td>
              <td><%= shared_account.username %></td>
              <td><%= shared_account.password_hint %></td>
              <td><%= shared_account.notes %></td>
            <td><%= link_to 'Edit', edit_shared_account_path(shared_account) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
