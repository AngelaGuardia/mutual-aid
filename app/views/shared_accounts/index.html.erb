<%= render "layouts/view_header", resource: @shared_accounts.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Account url</th>
        <th>Username</th>
        <th>Password hint</th>
        <th>Notes</th>
        <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      <% @shared_accounts.each do |shared_account| %>
        <tr>
          <td><%= shared_account.name %></td>
          <td><%= shared_account.account_url %></td>
          <td><%= shared_account.username %></td>
          <td><%= shared_account.password_hint %></td>
          <td><%= shared_account.notes %></td>
          <td><%= edit_button(shared_account) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
