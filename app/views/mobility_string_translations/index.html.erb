<%= render "layouts/view_header", resource: @mobility_string_translations.first %>

<table class="table table-hover table-curved table-condensed">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Locale</th>
      <th>Key</th>
      <th>Created by</th>
      <th>Approved</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @mobility_string_translations.each do |mobility_string_translation| %>
      <tr>
        <td><%= mobility_string_translation.translatable_type %></td>
        <td><%= mobility_string_translation.translatable.name %></td>
        <td><%= mobility_string_translation.locale %></td>
        <td><%= mobility_string_translation.key %></td>
        <td><%= mobility_string_translation.created_by&.name %></td>
        <td><%= yes_no(mobility_string_translation.is_approved) %></td>
        <td><%= edit_button(mobility_string_translation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
