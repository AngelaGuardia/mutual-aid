<!DOCTYPE html>
<html>
  <head>
    <title>Mutual-aid</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="notices-and-alerts">
      <%= render partial: "layouts/notices_and_alerts" %>
    </div>
    <div class="devise-button">
      <% if current_user %>
        <%= link_to "Account", edit_user_registration_path %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, no_confirm: true %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
