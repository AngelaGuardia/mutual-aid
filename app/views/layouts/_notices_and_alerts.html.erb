<% if notice %>
  <div id="notice" class="alert alert-info alert-dismissible text-center short-response" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice.html_safe %>
  </div>
<% end %>
<% if alert %>
  <div id="alert" class="alert alert-danger alert-dismissible text-center short-response" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert.html_safe %>
  </div>
<% end %>
