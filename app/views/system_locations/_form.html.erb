<%= simple_form_for @system_location, wrapper: :default, defaults: { wrapper: false } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :parent %>
    <%= f.association :organization %>
    <%= f.input :location_type %>
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :county %>
    <%= f.input :region %>
    <%= f.input :neighborhood %>
  </div>

  <%= render "layouts/view_template_form_buttons", f: f, resource: @system_location, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
