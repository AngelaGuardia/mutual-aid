<%= render "layouts/view_header", resource: @community_resources.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Location</th>
      <th>Published?</th>
      <th>Approved</th>
      <th>Edit</th>
    </tr>
    </thead>
    <tbody>
    <% @community_resources.each do |community_resource| %>
      <tr>
        <td>
          <strong><%= community_resource.name %></strong>
        </td>
        <td>
          <strong><%= community_resource.description.truncate(20) %></strong>
        </td>
        <td>
          <%= " | " + community_resource.tags + " | " if community_resource.tags.any? %>
        </td>
        <td>
          <%= community_resource.phone %> <%= community_resource.system_location&.name %>
        </td>
        <td class="has-text-centered"><%= yes_no(community_resource.published?) %></td>
        <td class="has-text-centered"><%= yes_no(community_resource.is_approved) %></td>
        <td>
          <%= link_to("<span class='fa fa-edit'></span><span></span>".html_safe,
                      edit_community_resource_path(community_resource) ,
                      title: "Edit #{community_resource.name}",
                      class: "button") if current_user %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
