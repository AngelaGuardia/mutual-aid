<%= simple_form_for @user, wrapper: :default, defaults: { wrapper: false } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, resource: @user, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
