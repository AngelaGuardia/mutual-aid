<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <%= f.simple_fields_for :person,  method: :patch do |ff| %>
    <%= render "person_fields", ff: ff, f: f %>
  <% end %>

  <% admin_and_self = current_user.admin? && current_user == @user %>
  <% extra_form_button_1 = nil %><!--  #show_button(@user.person, "View #{ 'my ' if admin_and_self }Profile", "fa fa-user-circle", "mt-1") if @user.person %>-->
  <% delete_button = admin_and_self ? "" : nil %><!-- nil will display the default delete button-->
  <%= render "layouts/view_footer_buttons", f: f, resource: @user, top_divider: true, extra_form_button_1: extra_form_button_1, delete_button: delete_button %>
<% end %>
