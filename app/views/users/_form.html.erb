<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <% extra_form_button_1 = show_button(@user.person, "View Profile", "fa fa-user-circle", "mt-1") if @user.person %>
  <% delete_button = current_user.admin? && current_user != @user ? nil : "" %><!-- nil will display the default delete button-->
  <%= render "layouts/view_footer_buttons", f: f, resource: @user, top_divider: true, delete_button: delete_button, extra_form_button_1: extra_form_button_1, extra_form_button_2: nil %>
<% end %>
