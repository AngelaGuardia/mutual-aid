<%= render "layouts/view_header", resource: @forms.last %>

<table class="table table-hover table-curved table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contribution type name</th>
      <th>Display categories</th>
      <th>Header html</th>
      <th>Footer html</th>
      <th>Organization</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.name %></td>
        <td><%= form.contribution_type_name %></td>
        <td><%= yes_no(form.display_categories) %></td>
        <td><%= form.header_html.truncate(20) %></td>
        <td><%= form.footer_html.truncate(20) %></td>
        <td><%= form.organization&.name %></td>
        <td><%= edit_button(form) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
