<%= simple_form_for @location_type do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :display_to_public, as: :radio_buttons %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, record: @location_type, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
