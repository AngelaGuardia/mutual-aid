<%= render "layouts/view_header", resource: @communication_log %>

<div class="section-detail">
  <p>
    <strong>Person:</strong>
    <%= @communication_log.person&.name %>
  </p>

  <p>
    <strong>Match:</strong>
    <%= @communication_log.match&.name %>
  </p>

  <p>
    <strong>Delivery method:</strong>
    <%= @communication_log.delivery_method&.name %>
    <%= @communication_log.auto_generated? ? '(Auto-generated)' : '' %>
  </p>

  <p>
    <strong>Delivery status:</strong>
    <%= @communication_log.delivery_status %>
  </p>

  <p>
    <strong>Sent at:</strong>
    <%= @communication_log.sent_at %>
  </p>

  <p>
    <strong>Needs follow up:</strong>
    <%= yes_no(@communication_log.needs_follow_up) %>
  </p>

  <p>
    <strong>Subject:</strong>
    <%= @communication_log.subject %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @communication_log.body&.html_safe %>
  </p>

  <hr>

  <%= edit_button(@communication_log) %>
  <%= show_button(@communication_log.person, @communication_log.person.name, "fa fa-user-circle") if @communication_log.person %>
  <%= show_button(@communication_log.match, "View Match") if @communication_log.match %>
</div>

