<%= render "layouts/view_header", resource: @communication_log.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
    <tr>
      <th>Person</th>
      <th>Channel</th>
      <th>Sent at</th>
      <th>Needs follow up</th>
      <th>Edit</th>
    </tr>
    </thead>

    <tbody>
    <% @communication_logs.each do |communication_log| %>
      <tr>
        <td><%= communication_log.person&.name %></td>
        <td><%= communication_log.channel %></td>
        <td><%= communication_log.sent_at %></td>
        <td><%= communication_log.needs_follow_up %></td>
        <td><%= link_to 'Edit', edit_communication_log_path(communication_log) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
