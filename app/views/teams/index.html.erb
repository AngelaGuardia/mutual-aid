<%= render "layouts/view_header", resource: @teams.last %>

<table class="table table-hover table-curved table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Organization</th>
      <th>Display on org chart</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.description %></td>
        <td><%= team.organization&.name %></td>
        <td><%= yes_no(team.display_on_org_chart) %></td>
        <td><%= edit_button(team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
