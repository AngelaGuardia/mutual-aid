<%= render "layouts/view_header", resource: @positions.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
    <tr>
      <th>Location</th>
      <th>Person</th>
      <th>Position type</th>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Is primary</th>
      <th>Notes</th>
      <th>Edit</th>
    </tr>
    </thead>

    <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.location&.name %></td>
        <td><%= position.person&.name %></td>
        <td><%= position.position_type %></td>
        <td><%= position.name %></td>
        <td><%= position.description %></td>
        <td><%= position.start_date %></td>
        <td><%= position.end_date %></td>
        <td><%= position.is_primary %></td>
        <td><%= position.notes %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
