<%= simple_form_for @position, wrapper: :default, defaults: { wrapper: false } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :organization %>
    <%= f.association :person %>
    <%= f.input :position_type %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :is_primary %>
    <%= f.input :notes %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, resource: @position, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
