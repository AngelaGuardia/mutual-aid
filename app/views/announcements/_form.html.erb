<%= simple_form_for @announcement, wrapper: :default, defaults: { wrapper: false } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>

    <% if ["new", "create"].include?(action_name) %>
      <%= f.hidden_field :approved %>
    <% else %>
      <%= f.input :approved %>
    <% end %>

    <%= f.input :publish_from %>
    <%= f.input :publish_until %>
  </div>

  <%= render "layouts/view_template_form_buttons", f: f, resource: @announcement, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
