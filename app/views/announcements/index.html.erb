<%= render "layouts/view_header", resource: @announcements.first %>

<div class="section-detail">
  <table class="table table-hover table-curved table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Published?</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @announcements.each do |announcement| %>
        <tr>
          <td>
            <strong><%= announcement.name %></strong>
          </td>
          <td>
            <strong><%= announcement.description.truncate(20) %></strong>
          </td>
          <td class="has-text-centered"><%= yes_no(announcement.published?) %></td>
          <td>
            <%= link_to("<span class='fa fa-edit'></span><span></span>".html_safe,
                        edit_announcement_path(announcement) ,
                        title: "Edit #{announcement.name}",
                        class: "button") if current_user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
