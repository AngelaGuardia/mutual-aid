<%= simple_form_for @organization do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :facebook_url %>
    <%= f.input :website_url %>
    <%= f.input :phone %>
    <%= f.input :is_instance_owner %>
    <%= f.input :has_sms_account %>
    <%= f.input :has_hosting_account %>
    <%= f.input :has_mailer_account %>

<!--    # TODO - add ability to list associated positions below -->
  </div>

  <%= render "layouts/view_footer_buttons", f: f, resource: @organization, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
