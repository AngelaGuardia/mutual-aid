<%= simple_form_for @person do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field is-grouped">
      <%= f.input :name, required: true %>
      <%= f.input :preferred_locale, required: true, as: :select, collection: @system_locales, selected: @preferred_locale_id %>
    </div>

    <div class="field is-grouped">
      <%= f.input :preferred_contact_method, required: true, as: :select, collection: @preferred_contact_methods, label_method: :name, value_method: :id %>
      <%= f.input :preferred_contact_timeframe %>
    </div>

    <div class="field is-grouped">
      <%= f.input :phone %>
      <%= f.input :phone_2 %>
    </div>

    <div class="field is-grouped">
      <%= f.input :email %>
      <%= f.input :email_2 %>
    </div>

    <div class="field is-grouped">
      <%= f.input :monthly_matches_max, as: :integer %>
      <%= f.input :monthly_donation_amount_max, as: :float %>
    </div>

    <%= f.input :skills %>
    <%= f.input :notes %>
    <%= f.association :user %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, resource: @person, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
